@model Tuple<int, string, string>
<div id="deleteConfirmModal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header"><h5 class="modal-title">Підтвердіть видалення</h5></div>
      <div class="modal-body">
        <p>Ви впевнені, що хочете видалити @Model.Item3 ?</p>
      </div>
      <div class="modal-footer">
        <form method="post" action="@Model.Item2">
          <input type="hidden" name="id" value="@Model.Item1" />
          <button type="submit" class="btn btn-danger">Видалити</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Скасувати</button>
        </form>
      </div>
    </div>
  </div>
</div>
